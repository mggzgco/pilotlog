generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum ChecklistType {
  PREFLIGHT
  POSTFLIGHT
}

enum AdsbMatchStatus {
  PENDING
  MATCHED
  AMBIGUOUS
  MISSING
}

model User {
  id           String             @id @default(cuid())
  email        String             @unique
  name         String?
  passwordHash String
  approved     Boolean            @default(false)
  role         UserRole           @default(USER)
  createdAt    DateTime           @default(now())
  sessions     Session[]
  flights      Flight[]
  planned      PlannedFlight[]
  aircraft     Aircraft[]
  logbook      LogbookEntry[]
  costs        Cost[]
  resetTokens  PasswordResetToken[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Flight {
  id             String        @id @default(cuid())
  userId         String
  tailNumber     String
  origin         String
  destination    String?
  departAt       DateTime
  arriveAt       DateTime?
  durationMins   Int?
  distanceNm     Int?
  routePolyline  String?
  statsJson      Json?
  createdAt      DateTime      @default(now())
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  plannedFlight  PlannedFlight?
  logbookEntries LogbookEntry[]
  costs          Cost[]
}

model PlannedFlight {
  id                String               @id @default(cuid())
  userId            String
  tailNumber        String
  plannedAt         DateTime?
  preflightSignedAt DateTime?
  preflightSignedBy String?
  postflightSignedAt DateTime?
  postflightSignedBy String?
  postflightStartedAt DateTime?
  adsbMatchStatus   AdsbMatchStatus      @default(PENDING)
  adsbCandidates    Json?
  flightId          String?
  createdAt         DateTime             @default(now())
  user              User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  flight            Flight?              @relation(fields: [flightId], references: [id], onDelete: SetNull)
  checklistItems    PlannedChecklistItem[]
}

model PlannedChecklistItem {
  id              String         @id @default(cuid())
  plannedFlightId String
  type            ChecklistType
  title           String
  required        Boolean        @default(true)
  order           Int            @default(0)
  completedAt     DateTime?
  completedBy     String?
  plannedFlight   PlannedFlight  @relation(fields: [plannedFlightId], references: [id], onDelete: Cascade)

  @@index([plannedFlightId])
}

model Aircraft {
  id         String   @id @default(cuid())
  userId     String
  tailNumber String
  model      String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tailNumber])
}

model LogbookEntry {
  id             String   @id @default(cuid())
  userId         String
  flightId       String?
  date           DateTime
  totalTime      Decimal? @db.Decimal(5, 2)
  picTime        Decimal? @db.Decimal(5, 2)
  sicTime        Decimal? @db.Decimal(5, 2)
  nightTime      Decimal? @db.Decimal(5, 2)
  instrumentTime Decimal? @db.Decimal(5, 2)
  remarks        String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  flight         Flight?  @relation(fields: [flightId], references: [id], onDelete: SetNull)
}

model Cost {
  id          String   @id @default(cuid())
  userId      String
  flightId    String?
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("USD")
  description String?
  date        DateTime
  receiptPath String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  flight      Flight?  @relation(fields: [flightId], references: [id], onDelete: SetNull)
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
